{
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "alt-editor.name": "emacs",
    "alt-editor.binary": "emacsclient",
    "alt-editor.args": "-c -a emacs --no-wait +{line}:{column} {filename}",
    // -e '(select-frame-set-input-focus (selected-frame))'",
    "alt-editor.terminal": false,
    // Error: Command failed: gnome-terminal -x sh -c  \
    // 'emacs --no-splash +7:1 /home/ilyagr/dev/ripgrep/NOTES_ILYA.org'

    "dance.modes": {
        "input": {
            "cursorStyle": "underline-thin"
        },

        "normal": {
            "cursorStyle": "block",
            "lineNumbers": "relative",
            "selectionBehavior": "character",  // Seems necesary with block cursor.
        }
    },
    // Doesn't work :(
    // "vspacecode.bindingOverrides": [
    //     {
    //         "keys": "w.enter",
    //         "name": "Save all",
    //         "type": "command",
    //         "command": "saveAll",
    //     }
    // ],
      
    // BEGIN VSpaceCode
    "git.confirmSync": false,
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
	// END VSpaceCode
    "diffEditor.renderSideBySide": false,
    "julia.enableTelemetry": true,
    "rust-client.engine": "rust-analyzer",
    "julia.symbolCacheDownload": true,
    "julia.executablePath": "~/.local/bin/julia",
    "editor.wrappingIndent": "indent",
    "editor.fontFamily": "'Fira Mono', 'Fira Code',  'Droid Sans Mono', 'Source Code Pro', 'monospace', monospace",
    "editor.fontSize": 13.5,
    
    "editor.fontLigatures": true,
    "disableLigatures.mode": "Cursor",
    "disableLigatures.ligatures": [
        // Wish I could disable these everywhere all the time.
        ".=",
        ".-",
        "==",
        "!==",
        "=/=",
        "->>",
        ">->",
        "<=<",
        "<<=",
        "=>>",
        ">=>",
        ">>=",
        ">>-",
        ">-",
        "<~>",
        "-<",
        "-<<",
        "=<<",
        "<~~",
        "<~",
        "~~",
        "~>",
        "~~>",
        "<=",
        "<>",
        ">=",
        "{.",
        "{|",
        "[|",
        "<:",
        ":>",
        "|]",
        "|}",
        ".}",
        "<|||",
        "<||",
        "<|",
        "<|>",
        "|>",
        "||>",
        "|||>",
        "<$",
        "<$>",
        "$>",
        "<!==",
        "</>",
        "/>",
        "***",
        "~-",
        "-~",
        "~@",
        "/=",
        "/==",
        "#!",
        "##",
        "###",
        "####",
    ],
}
