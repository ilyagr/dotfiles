#!/bin/sh
(
    # Yellow.
    # sh -c "trap 'exit 130' SIGINT; cat"
    trap "printf '\033[01;33m  Aborted by ^C.\033[00m\n'; exit 130" SIGINT
    "$@"
)
ERRCODE=$?
printf '\033[01;32m' # Green color
printf "\`%s\` exited with error code %s. Press Enter to continue, ^C/^D to abort/fail. " "$1" "$ERRCODE"
printf '\033[00m'    # Reset color
read -r __unused || (echo "(Got EOF or ^D)"; false)
